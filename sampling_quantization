#SAMPLING AND QUANTISATION

import matplotlib.pyplot as plt
image_path = '/content/house.jpeg'
image = plt.imread(image_path)

# downsampling factor
downsampling_factor = 4

downsampled_image = image[::downsampling_factor, ::downsampling_factor, :]

print(f"Original image shape: {image.shape}")
print(f"Downsampled image shape: {downsampled_image.shape}")

# Define the number of intensity levels
num_levels = 32

quantized_image = np.round(downsampled_image / 255.0 * (num_levels - 1)) / (num_levels - 1) * 255.0
quantized_image = quantized_image.astype(np.uint8)

print(f"Quantized image shape: {quantized_image.shape}")
print(f"Quantized image data type: {quantized_image.dtype}")

fig, axes = plt.subplots(1, 3, figsize=(15, 5))

axes[0].imshow(image)
axes[0].set_title('Original Image')
axes[0].axis('off')

axes[1].imshow(downsampled_image, interpolation='nearest')
axes[1].set_title('Downsampled Image')
axes[1].axis('off')

axes[2].imshow(quantized_image)
axes[2].set_title('Quantized Image')
axes[2].axis('off')

plt.tight_layout()
plt.show()
