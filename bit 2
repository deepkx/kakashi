#ifndef BLOCK_H_INCLUDED
#define BLOCK_H_INCLUDED
class BLOCK
{
    float height;
public:
    BLOCK();
    BLOCK(float);
    void Display();
};


#endif // BLOCK_H_INCLUDED

#include<iostream>
#include "block.h"
using namespace std;

BLOCK::BLOCK()
{
    height = 0;

}
BLOCK::BLOCK(float h)
{
    height = h;

}
void BLOCK::Display()
{
    cout<<"\n the height is : "<<height;
}




#include<iostream>

using namespace std;
#include "rectangle.h"

